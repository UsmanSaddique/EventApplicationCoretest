@model EventApplicationCore.Model.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";}

<br />

<div class="backgroundWhite border">
    <div class="row px=3">
        <div class="col-6 ">
            <h2 class="text-info" >Order Confirmed</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success   float-right" > New Order</a>
        </div>
    </div>

    @if (Model.OrderHeader!=null)
    {
        <div class="p-3" style=" color:maroon">
            Your Order has been Confirmed! Please see the order Summary below 
            <br />
            Feel free to contect us if you have any questions.
        </div>
        <partial name="_IndividualOrderDetails" model="Model"/>
    }
    else
    {
        <div class="text-danger"> Error....Please try Again.</div>
    }
</div>

