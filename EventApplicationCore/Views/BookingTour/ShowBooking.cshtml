@model IEnumerable<EventApplicationCore.Model.TourBookigngShowVM>
@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }

<div class="container-fluid border" style="border-radius:10px; padding:14px;margin-top:10px" >
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                @*<h5>List of Customers</h5>*@
                <div class="ibox-content">
                    <div class="text-center">

                        <a class="btn btn-secondary pull-left m-t-n-xs" asp-controller="BookingTour" asp-action="Index"> <strong> Book More  </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>

                                <th>Tour Name</th>
                                <th>Total</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Book Seats</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TourName</td>
                                        <td>@item.Total</td>
                                        <td>@item.From</td>
                                        <td>@item.TO</td>
                                        <td>@item.NoOfPerson</td>
                                        <td>
                                            <a asp-action="DeleteBooking" class="btn btn-sm btn-danger m-t-n-xs" onclick="return confirm('Remove Booking ')" asp-route-id="@item.Id"><i class="fa fa-trash" title="Remove"></i></a>
                                            @*<a asp-action="CustomerDetail" class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a>*@
                                            @*<a asp-action="DeleteCustomer" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-trash-o" title="Delete"></i></a>*@
                                        </td>
                                    </tr>
                                }}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>