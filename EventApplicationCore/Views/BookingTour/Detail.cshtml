@model EventApplicationCore.Model.TourVM
@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }



<div class="row container" style="margin:0 auto;">
    <div class="col-lg-12 border" style="margin-top:10px; border-radius:10px;padding:14px">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2> Create Tour    </h2>
                <span class="label label-success pull-right status"></span>
            </div>
            <div class="ibox-content ibox-content-1">
                <form class="form-horizontal" asp-controller="BookingTour" asp-action="Book" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="Id" />
                    <div class="row" style="justify-content:center; display:flex">
                        <div class="col-lg-6">
                           
                                @*<input type="hidden" asp-for="Id" />*@
                                <div class="form-group">
                                    <label asp-for="TourName" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="TourName" readonly type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="TourName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TourFrom" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="TourFrom" readonly type="text" class="form-control" data-validation="required" />

                                        <span asp-validation-for="TourFrom" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TourTo" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="TourTo" readonly required type="text" class="form-control" data-validation="required" />

                                        <span asp-validation-for="TourTo" class="text-danger"></span>
                                    </div>
                                
                            </div>
                                <div class="form-group">
                                    <label asp-for="TransportType"   class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <select asp-for="TransportType" disabled  class="form-control" data-validation="required">
                                            <option selected disabled>select the type --</option>
                                            <option value="1">Train</option>
                                            <option value="2">Flight</option>
                                            <option value="3">Bus</option>
                                            <option value="4">Car</option>
                                        </select>
                                        <span asp-validation-for="TransportType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cost" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Cost" readonly type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="Cost" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PerHead" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="PerHead" readonly type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="PerHead" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Discription" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Discription" readonly type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="Discription" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="TourDate" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="TourDate" readonly required class="form-control custom-date-picker datepicker" data-validation="required" />
                                        <span asp-validation-for="TourDate" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label asp-for="EndDate" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="EndDate" disabled type="text" class="form-control custom-date-picker datepicker" data-validation="required" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Seats" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Seats"  required type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="Seats" class="text-danger"></span>
                                    </div>
                                </div>

                          


                        </div>

                    </div>
                    <div class="row" style="margin-top:10px; justify-content:center; display:flex">

                      
                        <div class="col-lg-6">
                            <a value="Back" class="btn btn-primary" asp-controller="BookingTour" asp-action="Index">Back</a>
                            <input type="submit" class="btn btn-danger" value="Book Now" asp-controller="BookingTour" asp-action="Book" />

                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


