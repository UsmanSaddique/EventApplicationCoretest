@model IEnumerable<EventApplicationCore.Model.TourVM>

@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<div class="container-fluid" style="margin:50px 10px 0px 10px;">
    <div class="col-lg-12" >
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h3>List of Tour</h3>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="Tour" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>

                                <th>Tour Name</th>
                                <th>Tour Cost</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model!=null)
                            {

                            
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.TourName</td>
                                <td>@item.Cost</td>
                                <td>@item.TourFrom</td>
                                <td>@item.TourTo</td>
                                <td>@item.TourDate</td>
                                <td>
                                    <a asp-action="Create" class="btn btn-sm btn-info m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit" title="Edit"></i></a>
                                    @*<a asp-action="CustomerDetail" class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a>*@
                                    @*<a asp-action="DeleteCustomer" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-trash-o" title="Delete"></i></a>*@
                                </td>
                            </tr>
}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>