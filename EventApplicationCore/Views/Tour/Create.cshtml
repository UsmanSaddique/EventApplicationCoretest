@model EventApplicationCore.Model.Tour
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }



<div class="row" style="margin-top:50px;">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5 class="text-primary"> Create Tour    </h5>
                <span class="label label-success pull-right status"></span>
            </div>
            <div class="ibox-content ibox-content-1">
                <form class="form-horizontal" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="row">
                                @*<input type="hidden" asp-for="Id" />*@
                                <div class="form-group">
                                    <label asp-for="TourName" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="TourName" required type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="TourName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TourFrom" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <select asp-for="TourFrom" required asp-items="@ViewBag.From" class="form-control" data-validation="required">
                                            <option selected disabled>select the type --</option>

                                        </select>
                                        <span asp-validation-for="TourFrom" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TourTo" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <select asp-for="TourTo" required asp-items="@ViewBag.To" class="form-control" data-validation="required">
                                            <option selected disabled>select the type --</option>

                                        </select>
                                        <span asp-validation-for="TourTo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TransportType" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <select asp-for="TransportType" required class="form-control" data-validation="required">
                                            <option selected disabled>select the type --</option>
                                            <option value="1">Train</option>
                                            <option value="2">Flight</option>
                                            <option value="3">Bus</option>
                                            <option value="4">Car</option>
                                        </select>
                                        <span asp-validation-for="TransportType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cost" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Cost" required type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="Cost" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PerHead" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="PerHead" required type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="PerHead" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Discription" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Discription" type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="Discription" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="TourDate" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="TourDate" required class="form-control custom-date-picker datepicker" data-validation="required" />
                                        <span asp-validation-for="TourDate" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label asp-for="EndDate" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="EndDate" type="text" class="form-control custom-date-picker datepicker" data-validation="required" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>


                        </div>

                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="form-group">
                            <div class="col-lg-4 col-lg-offset-2">
                                <a value="Back" class="btn btn-white" asp-controller="Tour" asp-action="Index">Back</a>
                                <input type="submit" value="Submit" class="btn btn-primary" asp-action="Create" asp-controller="Tour" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


